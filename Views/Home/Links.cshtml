@model List<Link>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>Url</th>
			<th>Code</th>
			<th>Clicks Count</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model) {
				<tr>
					<td>@item.FullUrl</td>
					<td>
						<a href="@item.Href(Context)" target="blank">
							@item.Href(Context)
						</a>
					</td>
					<td>@item.Clicks</td>
				</tr>
		}
	</tbody>
</table>
